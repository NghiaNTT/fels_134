      <span class="white-text">
        <h1>
          <%= gravatar_for @user %>
        </h1>
      </span>
    </div>
    <div class="card-panel teal">
      <span class="white-text">
        <h2>
          <%= @user.name %>
        </h2>
      </span>
    </div>
    <div class="card-panel teal">
      <span class="white-text">
        <h2>
          <%= @user.email %>
        </h2>
      </span>
    </div>
  </div>
</div>
