<% provide :title, t("filter_word.wordslist") %>
<h1><%= t("filter_word.wordslist") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag words_path, method: :get do %>
      <div class="row">
        <div class="col-md-6">
          <%= select_tag :category_id,
            options_from_collection_for_select(@categories, :id, :name,
            params[:category_id]), include_blank: t("filter_word.filterall"),
            class: "form-control" %>
        </div>
        <div>
          <% Settings[filter_options].each do |option| %>
            <label>
              <%= radio_button_tag :filter_type, option,
                params[:filter_type] == option, class: "radio-inline" %>
              <%= t "#{option}" %>
            </label>
          <% end %>
        </div>
      </div>
      <%= submit_tag t("filter_word.filter"), class: "form-control" %>
    <% end %>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead">
    <tr>
      <th><%= t "filter_word.result" %></th>
    </tr>
  </thead>
  <tbody>
    <% if @words.any? %>
      <% @words.each do |word| %>
        <tr>
          <td>
            <%= word.name %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
