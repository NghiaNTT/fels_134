<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts.title_fels"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts.title_home"), root_path %></li>
        <li><%= link_to t("layouts.title_help"), help_path %></li>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to t("index_pages.all_users"), admin_users_path %></li>
            <li><%= link_to t("index_pages.word"), words_path %></li>
            <li><%= link_to t("layouts.AdminCourese"), admin_categories_path %></li>
          <% else %>
            <li><%= link_to t("edit_users.users"), users_path %></li>
            <li><%= link_to t("layouts.Courses"), categories_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "edit_users.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("edit_users.profile"), current_user %></li>
              <li><%= link_to t("edit_users.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("edit_users.logout"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("edit_users.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
