<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts.title_fels"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts.title_home"), root_path %></li>
        <li><%= link_to t("layouts.title_help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("login_logout.users"), '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("login_logout.profile"), current_user %></li>
              <li><%= link_to t("login_logout.settings"), '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("login_logout.logout"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layouts.title_login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
